{
    "name": "Java Development with Temurin JDK 17",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
      "ghcr.io/devcontainers/features/java:1": {
        "version": "17",
        "distribution": "temurin",
        "installMaven": true
      }
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "vscjava.vscode-java-pack",
          "redhat.vscode-xml",
          "redhat.vscode-maven"

        ],
        "settings": {
          "maven.executable.path": "/usr/bin/mvn"
        }
      }
    },
    "remoteEnv": {
      "JAVA_HOME": "/usr/lib/jvm/temurin-21-jdk",
      "PATH": "${containerEnv:PATH}:/usr/lib/jvm/temurin-21-jdk/bin"
    }
  }