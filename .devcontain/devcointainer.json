{
    "name": "Java Development with Temurin JDK 21",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
      "ghcr.io/devcontainers/features/java:1": {
        "version": "21",
        "distribution": "temurin",
        "installMaven": true
      }
    },
    "postCreateCommand": "bash ${containerWorkspaceFolder}/setup-codespace.sh",
    "customizations": {
      "vscode": {
        "extensions": [
          "vscjava.vscode-java-pack",
          "redhat.vscode-xml",
          "redhat.vscode-maven"
        ],
        "settings": {
          "java.configuration.runtimes": [
            {
              "name": "JavaSE-21",
              "path": "/usr/lib/jvm/temurin-21-jdk",
              "default": true
            }
          ],
          "java.jdt.ls.java.home": "/usr/lib/jvm/temurin-21-jdk",
          "maven.executable.path": "/usr/bin/mvn"
        }
      }
    },
    "remoteEnv": {
      "JAVA_HOME": "/usr/lib/jvm/temurin-21-jdk",
      "PATH": "${containerEnv:PATH}:/usr/lib/jvm/temurin-21-jdk/bin"
    }
  }